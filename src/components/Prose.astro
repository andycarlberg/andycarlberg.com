---
interface Props {
  // Allows optional utility classes to be passed to the wrapper
  class?: string;
}

const { class: className } = Astro.props;
---

<div
  class:list={[
    'prose',
		'prose-base',
    'md:prose-lg', // Slightly larger prose size for comfortable reading
    'dark:prose-invert', 
    className,
  ]}
>
  <slot />
</div>
