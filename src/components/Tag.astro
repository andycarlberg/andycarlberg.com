---
// src/components/Tag.astro

interface Props {
  name: string;
  count: number;
}

const { name, count } = Astro.props;

// Convert the tag name for the URL slug
const tagSlug = name.toLowerCase().replace(/\s+/g, "-");
---

<a 
    href={`/topics/${tagSlug}`} 
    class="flex items-center space-x-2 bg-brand-secondary text-brand-text-main hover:bg-brand-primary hover:text-white transition-colors duration-200 rounded-full px-4 py-2 text-sm font-semibold border border-brand-border shadow-md"
>
    <span>#{name}</span>
    <span class="inline-flex items-center justify-center h-5 w-5 rounded-full bg-brand-border text-xs text-brand-text-sub group-hover:bg-white group-hover:text-brand-primary transition-colors">
        {count}
    </span>
</a>
