{
  "name": "andycarlberg.com",
  "author": "Andy Carlberg <andycarlberg@gmail.com> (https://www.andycarlberg.com/)",
  "description": "The professional profile and technical blog of Digital Strategist Andy Carlberg, built with Astro and hosted on Vercel.",
  "license": "UNLICENSED",
  "type": "module",
  "scripts": {
    "start": "astro dev",
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format": "biome format --write --error-on-warnings .",
    "check": "biome check --write --error-on-warnings .",
    "lint:biome": "biome lint .",
    "lint:md": "markdownlint-cli2 --fix .",
    "lint:package-json": "npmPkgJsonLint .",
    "ci:code-quality": "pnpm run check",
    "ci:docs-lint": "pnpm run lint:md",
    "ci:security": "pnpm audit --prod --audit-level high",
    "ci:dep-health": "depcheck --ignore-bin-package=false",
    "ci:license-check": "license-checker --production --onlyAllow 'MIT;ISC;BSD-3-Clause;Apache-2.0;CC0-1.0;MPL-2.0' --excludePackages 'andycarlberg.com'",
    "ci:all": "pnpm run check && pnpm run ci:docs-lint && pnpm run ci:security && pnpm run ci:dep-health && pnpm run ci:license-check",
    "deps:check": "ncu"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,astro,css}": [
      "biome check --write"
    ],
    "*.{md,mdx}": [
      "markdownlint-cli2 --fix"
    ]
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/rss": "^4.0.15",
    "@astrojs/sitemap": "^3.7.0",
    "@iconify-json/lucide": "^1.2.88",
    "@iconify-json/simple-icons": "^1.2.69",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "astro": "^5.17.1",
    "astro-icon": "^1.1.5",
    "katex": "^0.16.28",
    "rehype-katex": "^7.0.1",
    "rehype-wrap-all": "^1.1.0",
    "remark-math": "^6.0.0",
    "schema-dts": "^1.1.5",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@astrojs/language-server": "^2.16.3",
    "@astrojs/vercel": "^9.0.4",
    "@biomejs/biome": "2.3.14",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "depcheck": "^1.4.7",
    "lefthook": "^2.1.0",
    "license-checker": "^25.0.1",
    "lint-staged": "^16.2.7",
    "markdownlint-cli2": "^0.20.0",
    "npm-check-updates": "^19.3.2",
    "npm-package-json-lint": "^9.1.0",
    "npm-package-json-lint-config-default": "^8.0.1",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "typescript-language-server": "^5.1.3",
    "vercel": "^50.12.1",
    "vite": "^7.3.1"
  }
}
