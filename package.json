{
	"name": "andycarlberg.com",
	"author": "Andy Carlberg <andycarlberg@gmail.com> (https://www.andycarlberg.com/)",
	"description": "The professional profile and technical blog of Digital Strategist Andy Carlberg, built with Astro and hosted on Vercel.",
	"license": "UNLICENSED",
	"type": "module",
	"version": "0.0.1",
	"scripts": {
		"start": "astro dev",
		"dev": "astro dev",
		"build": "astro build",
		"preview": "astro preview",
		"astro": "astro",
		"format": "biome format --write .",
		"check": "biome check --write . && pnpm run lint:package-json",
		"lint:biome": "biome lint .",
		"lint:md": "markdownlint-cli2 --fix .",
		"lint:package-json": "npmPkgJsonLint .",
		"ci:code-quality": "pnpm run check",
		"ci:docs-lint": "pnpm run lint:md",
		"ci:security": "pnpm audit --prod --audit-level high",
		"ci:dep-health": "depcheck --ignore-bin-package=false",
		"ci:license-check": "license-checker --production --onlyAllow 'MIT;ISC;BSD-3-Clause;Apache-2.0;CC0-1.0;MPL-2.0'",
		"ci:all": "pnpm run check && pnpm run ci:docs-lint && pnpm run ci:security && pnpm run ci:dep-health && pnpm run ci:license-check",
		"deps:check": "ncu"
	},
	"lint-staged": {
		"*.{js,ts,jsx,tsx,json,astro,css}": [
			"biome check --write"
		],
		"*.{md,mdx}": [
			"markdownlint-cli2 --fix"
		]
	},
	"dependencies": {
		"@astrojs/mdx": "^4.3.11",
		"@astrojs/sitemap": "^3.6.0",
		"@iconify-json/lucide": "^1.2.73",
		"@iconify-json/simple-icons": "^1.2.60",
		"@upstash/redis": "^1.35.6",
		"@vercel/analytics": "^1.5.0",
		"astro": "^5.15.9",
		"astro-icon": "^1.1.5",
		"sharp": "^0.34.5"
	},
	"devDependencies": {
		"@astrojs/language-server": "^2.16.0",
		"@astrojs/vercel": "^9.0.1",
		"@biomejs/biome": "2.3.7",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.17",
		"depcheck": "^1.4.7",
		"lefthook": "^2.0.4",
		"license-checker": "^25.0.1",
		"lint-staged": "^16.2.7",
		"markdownlint-cli2": "^0.19.1",
		"npm-check-updates": "^19.1.2",
		"npm-package-json-lint": "^9.0.0",
		"npm-package-json-lint-config-default": "^8.0.1",
		"tailwindcss": "^4.1.17",
		"vercel": "^48.10.11",
		"vite": "^7.2.4"
	}
}
