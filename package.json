{
	"name": "andycarlberg.com",
	"type": "module",
	"version": "0.0.1",
	"scripts": {
		"start": "astro dev",
		"dev": "astro dev",
		"build": "astro build",
		"preview": "astro preview",
		"astro": "astro",
		"format": "biome format --write .",
		"check": "biome check --write .",
		"lint": "pnpm run '/^lint:.*/'",
		"lint:biome": "biome lint .",
		"lint:md": "markdownlint-cli2 --fix .",
		"lint:alex": "alex --fail-on-error '**/*.{md,mdx,txt}'"
	},
	"lint-staged": {
		"*.{js,ts,jsx,tsx,json,astro,css}": [
			"biome check --write"
		],
		"*.{md,mdx,txt}": [
			"alex --fail-on-error"
		],
		"*.{md,mdx}": [
			"markdownlint-cli2 --fix"
		]
	},
	"dependencies": {
		"@astrojs/mdx": "^4.3.10",
		"@astrojs/rss": "^4.0.13",
		"@astrojs/sitemap": "^3.6.0",
		"@iconify-json/lucide": "^1.2.73",
		"@iconify-json/simple-icons": "^1.2.58",
		"astro": "^5.15.7",
		"astro-icon": "^1.1.5",
		"sharp": "^0.34.3"
	},
	"devDependencies": {
		"@astrojs/language-server": "^2.16.0",
		"@biomejs/biome": "2.3.6",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.17",
		"alex": "^11.0.1",
		"lefthook": "^2.0.4",
		"lint-staged": "^16.2.6",
		"markdownlint": "^0.39.0",
		"markdownlint-cli2": "^0.19.0",
		"tailwindcss": "^4.1.17"
	}
}
